<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.UserUpdateActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/userUpdate_backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_media_rew" />

                <TextView
                    android:id="@+id/userUpdate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원정보수정"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/userUpdate_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="ID/Email"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toTopOf="@+id/horizontalGuideline1" />

                <TextView
                    android:id="@+id/userUpdate_displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="No Provider Name"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_email" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/horizontalGuideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="70dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/horizontalGuideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="190dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/verticalGuideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp" />

                <TextView
                    android:id="@+id/userUpdate_label_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="ID/Email"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/horizontalGuideline1" />

                <TextView
                    android:id="@+id/userUpdate_label_displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="이  름"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_email" />

                <TextView
                    android:id="@+id/userUpdate_label_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="닉네임"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/horizontalGuideline2" />

                <TextView
                    android:id="@+id/userUpdate_label_dateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="96dp"
                    android:text="생년월일"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_nickname" />

                <TextView
                    android:id="@+id/userUpdate_label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:text="성별"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_dateOfBirth" />

                <TextView
                    android:id="@+id/userUpdate_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="닉네임"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toTopOf="@+id/horizontalGuideline2" />

                <RadioGroup
                    android:id="@+id/userUpdate_genderRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_dateOfBirthPicker">

                    <RadioButton
                        android:id="@+id/userUpdate_genderRadioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="남성"
                        tools:layout_editor_absoluteX="197dp"
                        tools:layout_editor_absoluteY="377dp" />

                    <RadioButton
                        android:id="@+id/userUpdate_genderRadioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="여성"
                        tools:layout_editor_absoluteX="197dp"
                        tools:layout_editor_absoluteY="377dp" />


                </RadioGroup>

                <DatePicker
                    android:id="@+id/userUpdate_dateOfBirthPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:calendarViewShown="false"
                    android:clickable="false"
                    android:datePickerMode="spinner"
                    android:spinnersShown="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.627"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_nickname" />

                <Button
                    android:id="@+id/userUpdate_cancelButton"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="60dp"
                    android:text="취소"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userUpdate_label_gender" />

                <Button
                    android:id="@+id/userUpdate_completeButton"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="16dp"
                    android:text="수정"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userUpdate_label_gender" />


                <TextView
                    android:id="@+id/userUpdate_signout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="24dp"
                    android:text="로그아웃"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/userUpdate_withdraw"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_completeButton" />

                <TextView
                    android:id="@+id/userUpdate_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="24dp"
                    android:text="회원탈퇴"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_completeButton" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>