<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.UserUpdateActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/userUpdate_backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_custom_arrow_back"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/userUpdate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원정보수정"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/horizontalDivider1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/userUpdate_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="ID/Email"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toTopOf="@+id/horizontalDivider1" />

                <TextView
                    android:id="@+id/userUpdate_displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="No Provider Name"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_email" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/verticalGuideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="90dp" />

                <TextView
                    android:id="@+id/userUpdate_label_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="ID/Email"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/horizontalDivider1" />

                <TextView
                    android:id="@+id/userUpdate_label_displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="이  름"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_email" />

                <TextView
                    android:id="@+id/userUpdate_label_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="닉네임"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_displayName" />

                <TextView
                    android:id="@+id/userUpdate_label_dateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="104dp"
                    android:text="생년월일"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_nickname" />

                <TextView
                    android:id="@+id/userUpdate_label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="40dp"
                    android:text="성별"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_label_dateOfBirth" />

                <TextView
                    android:id="@+id/userUpdate_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="닉네임"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_displayName" />

                <RadioGroup
                    android:id="@+id/userUpdate_genderRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_dateOfBirthPicker">

                    <RadioButton
                        android:id="@+id/userUpdate_genderRadioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="남성"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="197dp"
                        tools:layout_editor_absoluteY="377dp" />

                    <RadioButton
                        android:id="@+id/userUpdate_genderRadioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="여성"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="197dp"
                        tools:layout_editor_absoluteY="377dp" />


                </RadioGroup>

                <DatePicker
                    android:id="@+id/userUpdate_dateOfBirthPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:calendarViewShown="false"
                    android:clickable="false"
                    android:datePickerMode="spinner"
                    android:spinnersShown="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.627"
                    app:layout_constraintStart_toStartOf="@+id/verticalGuideline1"
                    app:layout_constraintTop_toBottomOf="@+id/userUpdate_nickname" />

                <TextView
                    android:id="@+id/userUpdate_signout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="20dp"
                    android:text="로그아웃"
                    android:textColor="@color/grey_500"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/userUpdate_withdraw"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalDivider1" />

                <TextView
                    android:id="@+id/userUpdate_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="회원탈퇴"
                    android:textColor="@color/grey_500"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalDivider1" />

                <View
                    android:id="@+id/horizontalDivider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="56dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="1dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/userUpdate_completeButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_corner_button"
        android:text="수정"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>